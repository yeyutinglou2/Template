{
  "root_id": {
    "width": "100%",
    "height": "100%",
    "backgroundColor": "transparent"
  },
  "frame_id": {
    "width": "100%",
    "height": "100%",
    "backgroundColor": "transparent",
    "tid": "main.event.getFrameId()"
  },
  "widget_id": {
    "width": "100%",
    "height": "100%",
    "backgroundColor": "transparent",
    "tid": "main.event.getWidgetId()"
  },
  "control_root_id": {
    "width": "100%",
    "height": "100%",
    "padding": {
      "top": "safeArea().top",
      "bottom": "safeArea().bottom",
      "left": 10,
      "right": 10
    },
    "alignRules": {
      "left": {
        "anchor": "__container__",
        "align": "HorizontalAlign.Start"
      },
      "top": {
        "anchor": "__container__",
        "align": "VerticalAlign.Top"
      }
    },
    "hitTestBehavior": "HitTestMode.Transparent"
  },
  "control_right_row_id": {
    "height": 28,
    "spacing": 10,
    "alignItems": "VerticalAlign.Center",
    "justifyContent": "FlexAlign.Start",
    "alignRules": {
      "top": {
        "anchor": "__container__",
        "align": "VerticalAlign.Top"
      },
      "right": {
        "anchor": "__container__",
        "align": "HorizontalAlign.End"
      }
    }
  },
  "interaction_text_id": {
    "height": 28,
    "visibility": "'Visibility.Visible'",
    "fontSize": 13,
    "fontColor": "white",
    "shadow": {
        "color": "#00000066",
        "offsetX": 1,
        "offsetY": 1,
        "opacity": 0.8,
        "radius": 1
    }
  },
  "control_right_skipview_id": {
    "height": 28,
    "onlySkipTxt": false,
    "extends": ["background_style", "background_border_style"],
    "fontColor": "#ffffff",
    "fontSize": 12
  },
  "logo_container": {
    "height": 16,
    "spacing": 2,
    "justifyContent": "FlexAlign.Start",
    "alignItems": "VerticalAlign.Center",
    "margin": {
      "top": "safeArea().top + 6",
      "left": 20
    },
    "alignRules": {
      "left": {
        "anchor": "__container__",
        "align": "HorizontalAlign.Start"
      },
      "top": {
        "anchor": "__container__",
        "align": "VerticalAlign.Top"
      }
    }
  },
  "logo_icon": {
    "width": 10,
    "height": 10,
    "imageFit": "ImageFitMode.Contain"
  },
  "logo_text": {
    "height": 10,
    "fontSize": 11,
    "fontColor": "white",
    "visibility": "${ads[0].slot_ad_setting.splash_setting.invisible_ad_label} == 1 ? 'Visibility.Visible' : 'Visibility.None'",
    "shadow": {
        "color": "#00000066",
        "offsetX": 1,
        "offsetY": 1,
        "opacity": 0.8,
        "radius": 1
    }
  },
  "extend": {
    "background_style": {
      "backgroundColor": "#00000066"
    },
    "background_border_style": {
      "backgroundColor": "#00000066",
      "borderWidth": 1,
      "borderColor": "#ffffff66"
    },
    "title_tool": {
      "borderRadius": 15,
      "fontColor": "#ffffff",
      "fontSize": 15,
      "padding": {
        "top": 5,
        "bottom": 5,
        "left": 10,
        "right": 10
      }
    },
    "relative_default_layout": {
      "alignRules": {
        "left": {
        "anchor": "__container__",
        "align": "HorizontalAlign.Start"
       },
      "top": {
        "anchor": "__container__",
        "align": "VerticalAlign.Top"
       }
      },
      "width":"100%",
      "height":"100%"
    }
  }
  
}
